<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<%= form_for [:api, @squad], html: { class: "w3-container" } do | form | %>
<br />
<br />
<div class="w3-container w3-deep-orange">
  <h2>Create a new Squad</h2>
</div>
<br />
  <% if squad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(squad.errors.count, "error") %> prohibited this squad from being saved:</h2>

      <ul>
      <% squad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w3-text-teal">
    <%= form.label :name %>
  </div>
  <div class="w3-input w3-border w3-light-grey">
    <%= form.text_field :name %>
  </div>

  <div class="w3-text-teal">
    <%= form.label :sport %>
  </div>
  <div class="w3-input w3-border w3-light-grey">
    <%= form.text_field :sport %>
  </div>


  <%= form.hidden_field :owner_id, value: current_user.id %>

  <br />

  <div class="menu-buttons">
    <%= form.submit %> <%= link_to '<button class="actions">Back</button>'.html_safe, api_squads_path %>
  </div>

<% end %>
